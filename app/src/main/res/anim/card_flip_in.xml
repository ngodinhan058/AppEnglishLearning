<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="300"
        android:fromDegrees="90"
        android:toDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:interpolator="@android:interpolator/decelerate_quad"/>
    <alpha
        android:duration="300"
        android:fromAlpha="0"
        android:toAlpha="1"/>
</set>
